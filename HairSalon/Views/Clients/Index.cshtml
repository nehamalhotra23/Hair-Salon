@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<div class="container">
<h1>Clients</h1>

@if (@Model.Count == 0)
{
  <h3>No items have been added yet!</h3>
} 

@foreach (Client clients in Model)
{
  <li>@Html.ActionLink($"{clients.Name}", "Details", new { id = clients.ClientId }) | @clients.Stylist.Name</li>
 
}