@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<div class="container">
<h1>Add a new client</h1>

@using (Html.BeginForm())
{
    <input type="hidden" name="StylistId" value=@ViewBag.StylistId /> 
    @Html.LabelFor(model => model.Name)
