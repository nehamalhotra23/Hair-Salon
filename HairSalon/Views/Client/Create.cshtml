@{
  Layout = "_Layout";
}
<link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'> 
<link rel="stylesheet" type="text/css" runat="server" media="screen" href="~/css/Stylesheet.css"/>

@model HairSalon.Models.Client

<div class="container">
<h1>Add a new client</h1>

@using (Html.BeginForm())
{
    <input type="hidden" name="StylistId" value=@ViewBag.StylistId /> 
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    
    <input type="submit" value="Add new client" class="btn btn-default" />
}
<hr>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>