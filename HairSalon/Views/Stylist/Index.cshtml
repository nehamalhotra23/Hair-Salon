@{
  Layout = "_Layout";
}
<link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'> 
<link rel="stylesheet" type="text/css" runat="server" media="screen" href="~/css/Stylesheet.css"/>
@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;
<div class="container" id="StylistDetail">

<h1>Name Of Stylists</h1>

@if (@Model.Count == 0)
{
  <h3>No Stylist have been added yet!</h3>
} 

@foreach (Stylist stylist in Model)
{
  <ol>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</ol>
}
<hr>
<p>@Html.ActionLink("Add new Stylist", "Create")</p><hr>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>