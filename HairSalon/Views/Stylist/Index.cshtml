@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;
<div class="container">

<h1>Stylists</h1>

@if (@Model.Count == 0)
{
  <h3>No Stylist have been added yet!</h3>
} 

@foreach (Stylist stylist in Model)
{
  <ol>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</ol>
}
<p>@Html.ActionLink("See the list of their Clients", "Index", "Client")</p>
<p>@Html.ActionLink("Add new Stylist", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>