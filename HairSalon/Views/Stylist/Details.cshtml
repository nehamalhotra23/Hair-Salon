@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model HairSalon.Models.Stylist;

<h2>Stylist Details</h2>

<h3>@Html.DisplayNameFor(model => model.Name): 
@Html.DisplayFor(model => model.Name)</h3>


@if (@Model.Client.Count == 0)
{
  <p>no client found</p>
} else {

@foreach (Client client in @Model.Client)
{
  <li>Name of the Client: @client.Name</li>
}
}

<p>@Html.ActionLink("Add new Stylist", "Create")</p>

